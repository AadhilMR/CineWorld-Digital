                        android:id="@+id/textView62"
                        android:layout_width="225dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_table_text_total"
                        android:fontFamily="@font/khand"
                        android:paddingStart="8dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="7dp"
                        android:text="LKR 2400"
                        android:textColor="@color/primary_foreground"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_theme"
                android:checked="false"
                android:fontFamily="@font/khand"
                android:text="@string/aggr_text_1"
                android:textColor="@color/primary_foreground"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_theme"
                android:checked="false"
                android:fontFamily="@font/khand"
                android:text="@string/aggr_text_2"
                android:textColor="@color/primary_foreground"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/khand"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/button_previous"
                    android:textColor="@color/primary_foreground"
                    android:textSize="20sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/button19"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/primary_theme"
                    app:strokeWidth="1.5dp" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_theme"
                    android:fontFamily="@font/khand"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/button_card_payment"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

